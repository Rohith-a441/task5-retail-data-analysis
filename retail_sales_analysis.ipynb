# ðŸ“Š Task 5: Retail Sales Data Analysis using Real Columns
import pandas as pd
import matplotlib.pyplot as plt

# Load the CSV
url = "https://raw.githubusercontent.com/LegendSeyi/Retail-Data-Analysis/main/retail_sales_dataset.csv"
data = pd.read_csv(url)
data.columns = data.columns.str.strip()  # Clean any hidden spaces

# Display first few rows
print("ðŸ”¹ Preview of the dataset:")
display(data.head())

# Show cleaned column names
print("\nâœ… Column names in the dataset:")
for col in data.columns:
    print(f"- {col}")

# Convert 'Date' to datetime
data['Date'] = pd.to_datetime(data['Date'])

# Extract Month from Date
data['Month'] = data['Date'].dt.month

# ðŸ“ˆ 1. Monthly Total Sales
monthly_sales = data.groupby('Month')['Total Amount'].sum()
print("\nðŸ“† Monthly Sales:")
print(monthly_sales)

# ðŸ“Š 2. Sales by Product Category
category_sales = data.groupby('Product Category')['Total Amount'].sum().sort_values(ascending=False)
print("\nðŸ“¦ Sales by Product Category:")
print(category_sales)

# ðŸ‘¥ 3. Sales by Gender
gender_sales = data.groupby('Gender')['Total Amount'].sum()
print("\nðŸš» Gender-wise Sales:")
print(gender_sales)

# ðŸ”¶ Plot 1: Monthly Sales
plt.figure(figsize=(10,5))
monthly_sales.plot(kind='bar', color='skyblue')
plt.title('ðŸ“… Monthly Sales')
plt.xlabel('Month')
plt.ylabel('Total Sales ($)')
plt.grid(axis='y')
plt.tight_layout()
plt.show()

# ðŸ”· Plot 2: Product Category Sales
plt.figure(figsize=(10,5))
category_sales.plot(kind='bar', color='lightgreen')
plt.title('ðŸ“¦ Sales by Product Category')
plt.xlabel('Product Category')
plt.ylabel('Total Sales ($)')
plt.xticks(rotation=45)
plt.grid(axis='y')
plt.tight_layout()
plt.show()

# ðŸ”¸ Plot 3: Gender-wise Sales
plt.figure(figsize=(6,6))
gender_sales.plot(kind='pie', autopct='%1.1f%%', startangle=140)
plt.title('ðŸš» Gender-wise Sales Share')
plt.ylabel('')
plt.tight_layout()
plt.show()
